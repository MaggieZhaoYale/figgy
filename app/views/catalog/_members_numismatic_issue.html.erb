  <h2>Members</h2>
  <table id="members" class="table table-striped">
    <tr>
     <th>Thumbnail</th>
     <th>Title</th>
     <th>Date Uploaded</th>
     <th>Visibility</th>
     <th>Actions</th>
    </tr>
    <% unless decorated_resource.decorated_coins.empty? %>
      <% decorated_resource.decorated_coins.each do |coin| %>
        <% volume_url = parent_solr_document_path("#{resource.id}", "#{coin.id}") %>
        <tr>
          <td><%= link_to figgy_thumbnail_path(coin, { class: 'thumbnail-inner', onerror: default_icon_fallback }), volume_url %></td>
          <td><%= coin.first_title %></td>
          <td><%= coin.created_at %></td>
          <td><%= coin.visibility.first.html_safe %></td>
          <td>
            <%= link_to 'View', volume_url, class: 'btn btn-default' %>
            <%= link_to 'Edit', main_app.polymorphic_path([:edit, coin]), class: 'btn btn-default' %>
            <%= link_to "Delete", main_app.polymorphic_path([coin]), class: 'btn btn-danger',
                                  data: { confirm: "Delete this #{resource.human_readable_type}?" },
                                  method: :delete %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <td>This work has no coins attached.  Click "Attach Child" to attach coins.</td>
    <% end %>
  </table>
