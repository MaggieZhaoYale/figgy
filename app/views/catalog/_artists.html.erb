<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Artists</h2>
  </div>
  <div class="row panel-body">
    <table id="members" class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% unless decorated_resource.decorated_numismatic_artists.empty? %>
          <% decorated_resource.decorated_numismatic_artists.each do |artist| %>
            <% artist_url = solr_document_path("#{artist.id}") %>
            <tr>
              <td><%= artist.title %></td>
              <td>
                <%= link_to 'View', artist_url, class: 'btn btn-default' %>
                <%= link_to 'Edit', main_app.polymorphic_path([:edit, artist]), class: 'btn btn-default' %>
                <%= link_to "Delete", main_app.polymorphic_path([artist]), class: 'btn btn-danger',
                                      data: { confirm: "Delete this #{artist.human_readable_type}?" },
                                      method: :delete %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <div class="col-sm-1">
      <% if can?(:create, NumismaticArtist) %>
        <%= link_to 'Add Artist', parent_add_numismatic_artist_path(resource, parent_id: resource.id), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
