      <% else %>
        <td></td>
      <% end %>
    </tr>
  <% end %>
  <% resource.preservation_files.each do |file| %>
    <tr>
      <td><span class="label label-info">Preservation Master</span>&nbsp;<%= file.label.first %></td>
      <% if can?(:download, resource) %>
